<%- include('header') -%>
  <div class="row trip-bg justify-content-center">
    <h1 class="text-center fw-bolder text-light p-4 mt-5">
      Top Destinations in Australia
    </h1>
    <% finalResults.forEach((cities)=>{ %>
  <div class="col-xxl-5 col-md-5">
    <div class="card-header"><h1 class="text-light"><%=cities.name%></h1></div>
    <img src="<%=cities.imagelink%>" class="img-fluid cities-img mb-3 w-100" />
    <p class="text-wrap">
      <a
        class="btn btn-outline-light w-100"
        data-bs-toggle="collapse"
        href="#collapseExample<%=cities.id%>"
        role="button"
        aria-expanded="false"
        aria-controls="collapseExample<%=cities.id%>"
        >View Details</a
      >
    </p>
    <div class="row">
      <div class="col">
        <div class="collapse" id="collapseExample<%=cities.id%>">
          <div class="card card-body w-25 bg-light text-dark">
            <%=cities.details%>
          </div>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <div>
            <button class="btn btn-outline-light mt-3">
              <a
                class="text-light"
                href="/attractions?filterBy=<%=cities.name%>"
                >View Attractions</a
              >
            </button>
          </div>
          <div>
            <button class="btn btn-outline-light mt-3 mx-3">
              <a class="text-light" href="/weather/<%=cities.name%>"
                >View Weather Forecast</a
              >
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }); %>
</div>
<%- include('footer') -%>