  <html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="/styles.css" />
    <link type="image/x-icon" rel="icon" href="/images/favicon.ico" />
    <title>Explore Australia</title>
  </head>

  <body class="page-bg">
    <div class="container h-100 d-flex justify-content-center align-items-center">
      <div class="row form-bg">
        <div class="col-md-6 p-0">
          <img src="https://www.itl.cat/pngfile/big/289-2895084_australia-streets-sunset-wallpaper-hd.jpg"
            class="w-100" />
        </div>
        <div class="col-md-6 col-sm-12 my-auto">
          <div class="alert alert-danger alert-dismissible fade show d-none" role="alert" id="alertUnsucessful">
            <strong>Incorrect username or password</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <script>
            const retrieveStatus = document.cookie
              .split('; ')
              .find((row) => row.startsWith('loggedIn='))
              .split('=')[1];
            const retrieveSignUpStatus = document.cookie
              .split('; ')
              .find((row) => row.startsWith('signUp='))
              .split('=')[1];
            if (retrieveStatus === 'false') {
              document
                .getElementById('alertUnsucessful')
                .classList.remove('d-none');
            }
            if (retrieveSignUpStatus === 'true') {
              document
                .getElementById('alertSucessful')
                .classList.remove('d-none');
            }
          </script>
          <form action="/login" method="POST">
            <h1 class="text-center">Login Details</h1>
            <div class="form-group text-dark">
              <label for="username">Username</label>
              <input name="username" type="text" class="form-control mt-2" id="username" placeholder="Username" />
            </div>
            <div class="form-group text-dark mt-3">
              <label for="password">Password</label>
              <input name="password" type="password" class="form-control mt-2" id="password" placeholder="Password" />
            </div>
            <div class="d-grid col-12">
              <button type="submit" class="btn btn-outline-dark mt-4 btn-lg">
                Submit
              </button>
            </div>
          </form>
          <small class="text-dark">Do not have an account? Sign up
            <a class="text-dark" href="/signup">here!</a></small>
        </div>
      </div>
    </div>
    <small class="text-dark">Already have an account? Login
      <a class="text-dark" href="/login">here!</a></small>

    <script>
      // Example starter JavaScript for disabling form submissions if there are invalid fields
      (function () {
        'use strict';

        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.querySelectorAll('.needs-validation');

        // Loop over them and prevent submission
        Array.prototype.slice.call(forms).forEach(function (form) {
          form.addEventListener(
            'submit',
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add('was-validated');
            },
            false
          );
        });
      })();
    </script>

    <%- include('footer') -%>
  </body>

  </html>
