<!DOCTYPE HTML>
<HTML lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="/styles.css">
  <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
<link rel="icon" type="images/png" sizes="32x32" href="/images/favicon-32x32.png">
<link rel="icon" type="images/png" sizes="16x16" href="/images/favicon-16x16.png">
<link rel="manifest" href="/images/site.webmanifest">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Serif:wght@200&display=swap" rel="stylesheet">
<link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css">

  <title>Aussie Explore</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light sticky-top p-0 transparent" id="nav" style="background-color: #6998AB ;">
  <a class="navbar-brand text-dark" href="/" id="nav-text"><img src="/images/logo.png" class="d-inline-block logo"> Aussie Explore</a>
  <button class="navbar-toggler  me-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon ml-5"></span>
  </button>

  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav mx-5">
      <li class="nav-item active">
        <li class="nav-item">
        <a class="nav-link text-dark" id="nav-text" href="/add-trip">Add Trip</a>
      </li>
        <li class="nav-item">
        <a class="nav-link text-dark" id="nav-text" href="/attractions">Top Attractions</a>
      </li>
        <li class="nav-item">
        <a class="nav-link text-dark" id="nav-text" href="/destinations">Destinations</a>
      </li>
      <li class="nav-item dropdown">
                 <% function capitalizeFirstLetter(str) { %>
            <% const capitalized = str.charAt(0).toUpperCase() + str.slice(1);%>
                <%return capitalized;%>
          <%}%>
        <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%=capitalizeFirstLetter(username)%>
        </a>
        <div class="dropdown-menu " aria-labelledby="navbarDropdown">
          <a class="dropdown-item text-dark" href="/planned-trips/<%=username%>">Planned Trips</a>
          <a class="dropdown-item text-dark" href="/favorites/<%=username%>">Favorited Trips</a>
          <form
        action="/logout?_method=DELETE"
        method="POST"
      ><input type="submit" name="submit" value="Logout" class="dropdown-item text-dark"></form>
        </div>
      </li>
    </ul>
  </div>
</nav>

<script>
  const navbar = document.getElementById('nav');
  const navText = document.querySelectorAll('#nav-text');
  const navDropdown = document.getElementById('navbarDropdown');

  const zeroY = window.pageYOffset;
  let newY;
  document.addEventListener('scroll', ()=> {
    newY = window.pageYOffset;
    if(newY > zeroY){
    navbar.classList.remove('transparent');
    navbar.classList.add('remove-transparent')
    }
    else if(newY === zeroY){
    navbar.classList.add('transparent');
    navbar.classList.remove('remove-transparent')
    }
  })
</script>